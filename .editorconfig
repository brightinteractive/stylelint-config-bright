; This file is for unifying the coding style for different editors and IDEs.
; More information at http://EditorConfig.org

root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

# Use 2 space indentation when editing package.json because that's what npm
# uses when it edits it.
[package.json]
indent_style = space
indent_size = 2
